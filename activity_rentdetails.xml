<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10sp"
    android:paddingLeft="10sp"
    android:paddingTop="10sp"
    android:background="@color/colorBack"
    tools:context="com.project.esh_an.vemanafeeportal.rentdetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="550sp"
        android:padding="10sp"
        android:background="@drawable/round_window_down">


    <EditText
        android:id="@+id/roomnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sem"
        android:hint="Room No."
        android:background="@drawable/roundcorners"
        android:padding="12sp"
        android:layout_marginTop="10sp"
        android:textColorHint="#818181"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:inputType="number"
        android:textColor="#ffff"/>

    <Spinner
        android:id="@+id/sem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16sp"
        android:textAlignment="center"
        android:layout_marginStart="100sp"
        android:layout_marginEnd="100sp"
        android:spinnerMode="dropdown"
        android:background="@drawable/roundcorners"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="30sp"/>

    <EditText
        android:id="@+id/usn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomnum"
        android:background="@drawable/roundcorners"
        android:textColor="#ffff"
        android:padding="12sp"
        android:singleLine="true"
        android:textColorHint="#818181"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:hint="USN"/>

    <EditText
        android:id="@+id/amt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usn"
        android:layout_marginTop="10sp"
        android:background="@drawable/roundcorners"
        android:padding="12sp"
        android:textColorHint="#818181"
        android:hint="@string/Rs"
        android:textColor="#ffff"
        android:layout_marginEnd="20sp"
        android:layout_alignLeft="@+id/roomnum"
        android:inputType="number"/>

        <Button
            android:id="@+id/proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amt"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="25sp"
            android:background="@drawable/rounded_corners_signin"
            android:gravity="center"
            android:text="Proceed"
            android:textSize="15dp"
            android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/hostel" />
    </RelativeLayout>

</RelativeLayout>
