<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.project.esh_an.vemanafeeportal.add_image">

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnUpload"
        android:layout_below="@+id/imgView"
        android:layout_weight="1"
        android:background="@color/colorBack"
        android:text="Choose"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="84dp"
        android:layout_weight="1"
        android:background="@color/colorBack"
        android:text="Upload"
        android:textColor="@color/colorWhite" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignEnd="@+id/btnChoose"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background"
        tools:ignore="DuplicateIds" />

</RelativeLayout>
