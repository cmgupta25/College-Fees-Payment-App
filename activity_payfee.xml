<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    android:padding="10sp"
    tools:context="com.project.esh_an.vemanafeeportal.payfee"
    android:orientation="vertical">


    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="550sp"
    android:background="@drawable/round_window_down"
    android:layout_marginTop="10sp">

    <Button
        android:id="@+id/colg_fee"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/hostel_rent"
        android:background="@drawable/button_bg_round_br"
        android:padding="15dp"
        android:text="College Fees"
        android:textSize="20sp" />

    <Button
        android:id="@+id/hostel_rent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/button_bg_round_bl"
        android:padding="15dp"
        android:text="Hostel
Rent"
        android:textSize="20sp" />

    <Button
        android:id="@+id/mess_fee"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/colg_fee"
        android:layout_alignTop="@+id/others"
        android:background="@drawable/button_bg_round_tr"
        android:padding="15dp"
        android:text="Mess
Fee"
        android:textSize="20sp" />

    <Button
        android:id="@+id/others"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/hostel_rent"
        android:layout_below="@+id/hostel_rent"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_bg_round_tl"
        android:padding="15dp"
        android:text="Others"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:text="Want To Pay "
        android:paddingLeft="10sp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="30sp" />

    </RelativeLayout>
</RelativeLayout>