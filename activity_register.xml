<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.project.esh_an.vemanafeeportal.Register">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_window_down"
    android:paddingTop="10sp"
    android:paddingLeft="10sp"
    android:paddingRight="10sp">
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="#ffff"
        android:hint="Name"
        android:singleLine="true"
        android:background="@drawable/roundcorners"
        android:layout_marginTop="0dp"
        android:padding="15sp"
        android:textColorHint="#818181"/>

    <EditText
        android:id="@+id/usn"
        android:textColorHint="#818181"
        android:layout_width="170sp"
        android:textColor="#ffff"
        android:background="@drawable/roundcorners"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:padding="15sp"
        android:hint="USN"/>

    <Spinner
        android:id="@+id/spyear"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/usn"
        android:spinnerMode="dropdown"
        android:textColor="#ffff"
        android:background="@drawable/roundcorners"
        android:padding="17sp"/>

    <Spinner
        android:id="@+id/spbranch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/usn"
        android:layout_marginTop="25dp"
        android:padding="17sp"
        android:spinnerMode="dropdown"
        android:background="@drawable/roundcorners"
        android:textColor="#ffff"/>

    <EditText
        android:id="@+id/email"
        android:textColorHint="#818181"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spbranch"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundcorners"
        android:hint="E-Mail"
        android:singleLine="true"
        android:padding="15sp"
        android:textColor="#ffff" />

    <EditText
        android:id="@+id/pswd"
        android:textColorHint="#818181"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundcorners"
        android:hint="Password (Minimum 6 digits)"
        android:inputType="textPassword"
        android:padding="15sp"
        android:singleLine="true"
        android:textColor="#ffff" />

    <EditText
        android:id="@+id/cnfpswd"
        android:textColorHint="#818181"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pswd"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundcorners"
        android:hint="Confirm Password (Minimum 6 digits)"
        android:inputType="textPassword"
        android:padding="15sp"
        android:singleLine="true"
        android:textColor="#ffff" />

    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cnfpswd"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/rounded_corners_signin"
        android:text="ok"
        android:textSize="15dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cnfpswd"
        android:layout_below="@+id/cnfpswd"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:text="Show Password" />
</RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/md5"/>

</RelativeLayout>