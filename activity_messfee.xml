<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:paddingTop="10sp"
    android:background="@color/colorBack"
    tools:context="com.project.esh_an.vemanafeeportal.messfee">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="550sp"
    android:padding="10sp"
    android:background="@drawable/round_window_down">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/mess1" />

    <EditText
        android:id="@+id/usn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12sp"
        android:textColor="#ffff"
        android:textColorHint="#818181"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/imageView8"
        android:inputType="textPersonName"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:hint="USN"
        android:background="@drawable/roundcorners"/>

    <EditText
        android:id="@+id/rmn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usn2"
        android:layout_alignStart="@+id/usn2"
        android:layout_marginBottom="57dp"
        android:hint="Room No."
        android:textColor="#ffff"
        android:textColorHint="#818181"
        android:background="@drawable/roundcorners"
        android:padding="12sp"
        android:layout_below="@+id/usn2"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:inputType="number" />

    <EditText
        android:id="@+id/mon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rmn"
        android:layout_alignTop="@+id/rmn"
        android:layout_marginTop="64dp"
        android:textColorHint="#818181"
        android:background="@drawable/roundcorners"
        android:hint="Month"
        android:textColor="#ffff"
        android:layout_marginEnd="20sp"
        android:inputType="textPersonName"
        android:padding="12sp" />

    <EditText
        android:id="@+id/am"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/mon"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundcorners"
        android:hint="@string/Rs"
        android:textColorHint="#818181"
        android:inputType="number"
        android:textColor="#ffff"
        android:layout_alignLeft="@+id/mon"
        android:layout_marginEnd="20sp"
        android:padding="12sp" />

    <Button
        android:id="@+id/proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/am"
        android:layout_marginTop="30dp"
        android:layout_marginStart="120dp"
        android:background="@drawable/rounded_corners_signin"
        android:gravity="center"
        android:text="Proceed"
        android:textStyle="bold"/>


</RelativeLayout>
</RelativeLayout>
