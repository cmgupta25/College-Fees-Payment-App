<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    tools:context="com.project.esh_an.vemanafeeportal.hostel_fee">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="560sp"
    android:background="@drawable/round_window_down"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp">
    <ImageView
        android:id="@+id/imagegirl"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/girl"
        android:clickable="true"/>

    <TextView
        android:id="@+id/girls_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagegirl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="GIRLS"
        android:textColor="#000"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageboy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/imagegirl"
        android:layout_below="@+id/girls_rent"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/male1"
        android:clickable="true"/>

    <TextView
        android:id="@+id/boys_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/girls_rent"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="BOYS "
        android:textColor="#000"
        android:textSize="35dp"
        android:textStyle="bold" />
</RelativeLayout>

</RelativeLayout>
