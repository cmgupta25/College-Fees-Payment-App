<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    android:orientation="vertical"
    android:id="@+id/sign_in"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    tools:context="com.project.esh_an.vemanafeeportal.Signin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

   <RelativeLayout
       android:id="@+id/relativeLayout"
       android:layout_width="match_parent"
       android:layout_height="550sp"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:background="@drawable/round_window_down"
       android:orientation="horizontal">

       <TextView
           android:id="@+id/textView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="8dp"
           android:paddingTop="50sp"
           android:paddingBottom="20sp"
           android:text="One Step Away"
           android:textColor="#000000"
           android:textSize="25sp" />

       <EditText
           android:id="@+id/usrname"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/textView"
           android:layout_centerHorizontal="true"
           android:layout_marginEnd="40sp"
           android:layout_marginTop="65dp"
           android:background="@drawable/roundcorners"
           android:hint="Email"
           android:inputType="textPersonName"
           android:padding="15sp"
           android:textColor="#ffff"
           android:textColorHint="#818181" />

       <EditText
           android:id="@+id/pswd"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignStart="@+id/usrname"
           android:layout_below="@+id/usrname"
           android:layout_marginEnd="20sp"
           android:layout_marginTop="17dp"
           android:background="@drawable/roundcorners"
           android:hint="Password"
           android:inputType="textPassword"
           android:padding="15sp"
           android:textColor="#ffff"
           android:textColorHint="#818181" />

       <Button
           android:id="@+id/login"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_above="@+id/fgtpswd"
           android:layout_marginBottom="50dp"
           android:layout_marginStart="70dp"
           android:layout_marginEnd="70dp"
           android:background="@drawable/rounded_corners_signin"
           android:text="@string/title_activity_signin"
           android:textSize="15dp"
           android:textStyle="bold" />

       <TextView
           android:id="@+id/fgtpswd"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_above="@+id/signup"
           android:layout_alignEnd="@+id/pswd"
           android:layout_marginBottom="15dp"
           android:clickable="true"
           android:text="Forgot Password ?"
           android:textColor="#ffff"
           android:textSize="20sp"
           android:textStyle="italic" />

       <TextView
           android:id="@+id/signup"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignEnd="@+id/pswd"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="20dp"
           android:text="New User? Sign up.!"
           android:textAllCaps="false"
           android:textColor="#ffff"
           android:textSize="20sp"
           android:textStyle="bold" />

       <ImageView
           android:id="@+id/icon_email"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/usrname"
           android:layout_alignEnd="@+id/signup"
           android:layout_marginBottom="13dp"
           android:layout_marginEnd="8dp"
           app:srcCompat="@drawable/ic_email_black_24dp" />

       <ImageView
           android:id="@+id/icon_pswd"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/pswd"
           android:layout_alignStart="@+id/icon_email"
           android:layout_marginBottom="13dp"
           app:srcCompat="@drawable/ic_pswd_24dp" />

       <CheckBox
           android:id="@+id/checkBox"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignStart="@+id/pswd"
           android:layout_below="@+id/pswd"
           android:layout_marginStart="25dp"
           android:layout_marginTop="16dp"
           android:text="Show Password"
           android:textSize="17dp"/>


   </RelativeLayout>


</RelativeLayout>

