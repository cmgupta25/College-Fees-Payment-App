<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:paddingTop="10sp"
    tools:context="com.project.esh_an.vemanafeeportal.clg_fee">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="550sp"
        android:id="@+id/relativeLayout"
        android:background="@drawable/round_window_down">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5sp"
            android:text="Student Details :"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView9"
            android:layout_marginTop="50dp"
            android:text="Name"
            android:textColor="#ffff"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView8"
            android:textColor="#ffff"
            android:layout_marginTop="25dp"
            android:text="USN"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="25dp"
            android:text="Email-id"
            android:textColor="#ffff"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView10"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:text="Branch"
            android:textColor="#ffff"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView9"
            android:layout_marginTop="25dp"
            android:text="Year"
            android:textColor="#ffff"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_alignStart="@+id/textView9"
            android:layout_marginTop="25dp"
            android:text="Amount to Pay"
            android:textColor="#ffff"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/amnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundcorners"
            android:hint="@string/Rs"
            android:layout_marginStart="30sp"
            android:textColorHint="#818181"
            android:inputType="number"
            android:textColor="#ffff"
            android:layout_marginEnd="30sp"
            android:padding="15sp" />

        <TextView
            android:id="@+id/name_clgfee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_marginStart="140dp"
            android:hint="Name"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/usn_clgfee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/name_clgfee"
            android:textColor="#000"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="25dp"
            android:hint="USN"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/email_clgfee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/usn_clgfee"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="25dp"
            android:layout_alignBaseline="@+id/textView10"
            android:hint="Email-id"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/branch_clgfee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_alignStart="@+id/email_clgfee"
            android:layout_marginTop="25dp"
            android:hint="Branch"
            android:layout_alignBaseline="@+id/textView5"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/year_clgfee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/branch_clgfee"
            android:layout_marginTop="25dp"
            android:layout_alignBaseline="@+id/textView11"
            android:hint="Year"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ok_clgfee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="150dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rounded_corners_signin"
            android:text="OK"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    </RelativeLayout>

</RelativeLayout>