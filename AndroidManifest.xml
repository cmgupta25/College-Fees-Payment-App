<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.project.esh_an.vemanafeeportal"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="43" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme1.NoActionBar" />
        <activity
            android:name=".Signin"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_signin"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".activity.InitialScreenActivity"
            android:label="Payment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.WebViewActivity"
            android:label="Payment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.StatusActivity"
            android:label="Payment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".payfee"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_payfee"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".clg_fee"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_clg_fee"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".hostel_fee"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_hostel_fee"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".rentdetails"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_rentdetails"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".messfee"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_messfee"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".myprofile"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_myprofile"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".add_on.resetPass"
            android:label="Reset Password"
            android:theme="@style/FullscreenTheme"/>
        <activity android:name=".add_on.Menu"
            android:label="Menu"
            android:theme="@style/FullscreenTheme"/>
        <activity android:name=".add_image"
            android:label="Upload"
            android:theme="@style/FullscreenTheme"/>
    </application>

</manifest>